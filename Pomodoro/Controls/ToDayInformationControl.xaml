<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pomodoro.Controls" x:Class="Pomodoro.Controls.ToDayInformationControl" 
             mc:Ignorable="d" 
            >
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"  />
            <RowDefinition Height="auto" />
            <RowDefinition  />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" x:Name="WeekDayName" FontSize="22" Content="dayOfweek"/>
        <Calendar Visibility="Hidden" Name="Calendar" Width="0" Height="0"></Calendar>
        <Label Grid.Row="1" Grid.Column="1"   Name="DateLabel" HorizontalAlignment="Right"/>
        


    </Grid>
</UserControl>
