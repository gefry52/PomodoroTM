<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Pages="clr-namespace:Pomodoro.Pages" xmlns:Controls="clr-namespace:Pomodoro.Controls" x:Class="Pomodoro.Content.TimerSettings" 
             mc:Ignorable="d" 
           >
    <Grid >
        <Controls:TimerSettingsControl VerticalAlignment="Top"
                                       ShortBreakTime="{Binding ShortBreakTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                       ShortBreakTimeMaximum="{Binding ShortBreaktime, Mode=OneTime}"
                                       ShortBreakTimeMinimum="0"
                                       LongBreakTime="{Binding LongBreakTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                       LongBreakTimeMaximum="{Binding LongBreakTime, Mode=OneTime}"
                                       LongBreakTimeMinimum="0"
                                       IsTurnOffMonitor="{Binding IsTurnOffMonitor,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                       IsTurnOnSound="{Binding IsTurnOnSound, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</UserControl>
