<UserControl x:Class="Pomodoro.Pages.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:Content="clr-namespace:Pomodoro.Content"
             mc:Ignorable="d"   
             Name="HomePage"
             >
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"  />
            <RowDefinition Height="auto" />
            <RowDefinition  />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <mui:ModernButton  
                               Grid.Row="0"
                               Grid.Column="2" 
                               IconData="M 54.2499,34L 42,34L 42,21.7501L 45.9999,17.7501L 45.9999,26.7501L 53.9999,
                               18.7501L 57.2499,22.0001L 49.2499,30.0001L 58.2499,30.0001L 54.2499,34 Z M 34,21.7501L
                               34,34L 21.75,34L 17.75,30.0001L 26.75,30.0001L 18.75,22.0001L 22,18.7501L 30,26.7501L 30,17.7501L
                               34,21.7501 Z M 21.75,42L 34,42L 34,54.25L 30,58.25L 30,49.25L 22,57.25L 18.75,54L 26.75,46L
                               17.75,46L 21.75,42 Z M 42,54.25L 42,42L 54.2499,42L 58.2499,46L 49.2499,46.0001L 57.2499,54L
                               53.9999,57.25L 45.9999,49.25L 45.9999,58.25L 42,54.25 Z" 
                               Click="ModernButton_Click"
                               Grid.ColumnSpan="3"
                               HorizontalAlignment="Right" VerticalAlignment="Top" />
        <Content:TimerPanel  Grid.Row="1" Grid.Column="0"  HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Calendar Grid.Row="1"  Grid.Column="1" Grid.ColumnSpan="2" Margin="20" VerticalAlignment="Top"  />
        <Content:TaskGridView Grid.Row="2"  Margin="0,0,0,0" VerticalAlignment="Top" />
        <Content:TaskPanelView Grid.Row="2" Grid.Column="1"  Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Top"  Taskys="{Binding CurrentTask,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,  ElementName=TaskPanel}"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="151,85,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Command="{Binding SetCurrentTask,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
    
</UserControl>
